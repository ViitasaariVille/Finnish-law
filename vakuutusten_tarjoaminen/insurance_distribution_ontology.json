{
  "ontology": {
    "name": "Insurance Distribution Act",
    "finnish_name": "Laki vakuutusten tarjoamisesta",
    "law_number": "234/2018",
    "effective_date": "2018-10-01",
    "source": "https://www.finlex.fi/fi/lainsaadanto/2018/234",
    "description": "Finnish law governing insurance distribution, insurance intermediaries, and insurance broker activities"
  },
  "entities": {
    "InsuranceProvider": {
      "description": "Entity that provides insurance contracts",
      "finnish_name": "Vakuutuksenantaja",
      "attributes": ["name", "businessId", "address", "licenseType"],
      "legal_basis": "Section 5(1)",
      "includes": ["InsuranceCompany", "ReinsuranceCompany", "ForeignInsuranceCompany"]
    },
    "EEAState": {
      "finnish_name": "ETA-valtio",
      "description": "European Economic Area member state",
      "legal_basis": "Section 5(10)"
    },
    "ThirdCountry": {
      "finnish_name": "Kolmas maa",
      "description": "Non-EEA country",
      "legal_basis": "Section 5(11)"
    },
    "InsuranceBroker": {
      "description": "Professional intermediary who arranges insurance for clients",
      "finnish_name": "Vakuutusmeklari",
      "attributes": ["name", "businessId", "registrationNumber", "professionalQualification"],
      "legal_basis": "Section 5(2)",
      "registration_conditions": {
        "not_employed_by_insurer": "Not in employment/agency relationship that could affect customer interests",
        "registered_in_finland": "Registered in trade register, Finnish residence",
        "not_bankrupt": "Not bankrupt, not under guardianship, of legal age",
        "good_reputation": "Persons in §17 must have good reputation",
        "professional_qualification": "Exam or equivalent required",
        "liability_insurance": "Required per §58",
        "client_assets": "System for separating client funds required",
        "staff_requirement": "At least 30% of staff must be registered brokers",
        "ownership_disclosure": "10%+ shareholders must be disclosed",
        "control_disclosure": "Controlling interests must be disclosed"
      },
      "subclasses": {
        "RegisteredInsuranceBroker": {"description": "Full-time insurance broker", "legal_basis": "Section 55"},
        "PartTimeInsuranceBroker": {"description": "Part-time insurance broker", "legal_basis": "Section 55"}
      }
    },
    "InsuranceAgent": {
      "description": "Representative acting on behalf of insurance provider",
      "finnish_name": "Asiamies",
      "attributes": ["name", "businessId", "principal", "registrationNumber"],
      "legal_basis": "Section 5(3)",
      "registration_conditions": [
        "Registered in Finland trade register",
        "Not bankrupt, of legal age",
        "Good reputation required",
        "Professional qualification required"
      ]
    },
    "PartTimeAgent": {
      "description": "Part-time insurance agent (ancillary activity)",
      "finnish_name": "Sivutoiminen vakuutusedustaja",
      "attributes": ["name", "principal", "annualPremiumLimit"],
      "legal_basis": "Section 4",
      "constraints": {
        "max_annual_premium": "600 EUR per year",
        "max_per_insured": "200 EUR per person if trip <= 3 months",
        "must_be": "Complementary to main goods/services",
        "covers": ["Goods_defects", "Damage", "Non_use", "Travel_risks"],
        "excludes": ["Life_insurance", "Liability_risks (unless complementary)"]
      }
    },
    "InsuranceDistributionService": {
      "description": "Service of offering insurance products",
      "attributes": ["serviceType", "targetMarket", "complianceStatus"],
      "legal_basis": "Section 2",
      "subclasses": {
        "Advice": {"description": "Personal recommendation", "legal_basis": "Section 2"},
        "PolicyPreparation": {"description": "Preparing insurance contracts", "legal_basis": "Section 2"},
        "PolicyAdministration": {"description": "Assisting in contract management", "legal_basis": "Section 2"}
      },
      "exclusions": {
        "IncidentalInformation": {"description": "Incidental info, not for helping with insurance", "legal_basis": "Section 2(1)"},
        "ClaimsHandling": {"description": "Claims administration by insurer", "legal_basis": "Section 2(2)"},
        "ConsumerAdvice": {"description": "Consumer advice by non-insurance entities", "legal_basis": "Section 2(3)"}
      }
    },
    "Customer": {
      "description": "Person or entity seeking or holding insurance",
      "attributes": ["type", "country", "needsAssessment"],
      "subclasses": {
        "Consumer": {"description": "Natural person acting for personal purposes", "legal_basis": "Section 5"},
        "ProfessionalCustomer": {"description": "Professional or institutional customer", "legal_basis": "Section 5(13)"},
        "CommercialCustomer": {"description": "Business customer", "legal_basis": "Section 5"}
      }
    },
    "InsuranceIntermediary": {
      "description": "Insurance intermediary - broker or agent",
      "finnish_name": "Vakuutusedustaja",
      "legal_basis": "Section 5(4)",
      "subclasses": ["InsuranceBroker", "InsuranceAgent"]
    },
    "InsuranceDistributor": {
      "description": "Insurance provider, intermediary, or part-time agent",
      "finnish_name": "Vakuutuksentarjoaja",
      "legal_basis": "Section 5(6)",
      "includes": ["InsuranceProvider", "InsuranceIntermediary", "PartTimeAgent"]
    },
    "DurableMedium": {
      "description": "Medium that allows storing information for future reference",
      "finnish_name": "Pysyvä tapa",
      "legal_basis": "Section 5(9)"
    },
    "HomeState": {
      "description": "Home Member State for intermediaries",
      "finnish_name": "Kotijäsenvaltio",
      "legal_basis": "Section 5(15)"
    },
    "HostState": {
      "description": "Host Member State where services provided",
      "finnish_name": "Vastaanottava jäsenvaltio",
      "legal_basis": "Section 5(16)"
    },
    "Branch": {
      "description": "Permanent establishment in another EEA state",
      "finnish_name": "Sivuliike",
      "legal_basis": "Section 5(17)"
    },
    "LargeRisk": {
      "description": "Large risk as defined in Insurance Companies Act",
      "finnish_name": "Suuri riski",
      "legal_basis": "Section 5(18)"
    },
    "Remuneration": {
      "description": "Payment, commission or fee",
      "finnish_name": "Vastike",
      "legal_basis": "Section 5(8)"
    },
    "InsuranceProduct": {
      "description": "Insurance contract or product offered",
      "attributes": ["type", "coverage", "premium", "terms"],
      "legal_basis": "Section 42"
    },
    "InvestmentInsurance": {
      "description": "Life insurance with investment component",
      "finnish_name": "Sijoitusvakuutus",
      "attributes": ["fundValue", "surrenderValue", "riskLevel"],
      "legal_basis": "Section 5(12)",
      "additional_requirements": "Sections 44-54",
      "exclusions": ["pure_death_benefit", "occupational_pension", "state_pension"]
    },
    "ProductGovernance": {
      "finnish_name": "Tuotehallinta",
      "description": "Product governance requirements for insurers",
      "legal_basis": "Section 42",
      "requirements": ["product_approval", "target_market_definition", "risk_assessment", "distribution_plan"]
    },
    "TargetMarket": {
      "finnish_name": "Kohdemarkkinat",
      "description": "Target market for insurance products",
      "legal_basis": "Section 42"
    },
    "DisclosureRequirements": {
      "finnish_name": "Tiedonantovelvollisuus",
      "description": "Information disclosure requirements",
      "legal_basis": "Sections 32-38",
      "types": ["insurer_information", "intermediary_information", "product_information", "commission_disclosure"]
    },
    "NeedsAssessment": {
      "finnish_name": "Vakuutustarpeen selvittäminen",
      "description": "Broker duty to assess customer needs",
      "legal_basis": "Section 35"
    },
    "SuitabilityAssessment": {
      "finnish_name": "Soveltuvuuden arviointi",
      "description": "Assessment of suitability for investment insurance",
      "legal_basis": "Sections 49-50"
    },
    "CrossBorderOperation": {
      "finnish_name": "Rajat ylittävä toiminta",
      "description": "Cross-border insurance distribution within EEA",
      "legal_basis": "Sections 22-29",
      "types": ["service_freedom", "establishment_freedom"],
      "requirements": ["home_state_notification", "host_state_rules_compliance"]
    },
    "ConflictsOfInterest": {
      "finnish_name": "Eturistiriitatilanteet",
      "description": "Conflicts of interest management",
      "legal_basis": "Sections 44-45",
      "requirements": ["identification", "prevention", "disclosure"]
    },
    "ProfessionalQualification": {
      "description": "Professional competence requirements",
      "finnish_name": "Ammattipätevyys",
      "attributes": ["type", "obtained", "validUntil", "continuingEducation"],
      "legal_basis": "Sections 18-21",
      "requirements": "15 hours annually",
      "components": {
        "insurance_knowledge": "Knowledge of insurance products",
        "legal_knowledge": "Knowledge of relevant legislation",
        "good_practice": "Good insurance/broker practice"
      }
    },
    "GoodReputation": {
      "description": "Character requirements for insurance intermediaries",
      "attributes": ["criminalRecord", "bankruptcyStatus", "debarmentStatus"],
      "legal_basis": "Sections 16-17",
      "conditions": "No conviction for relevant crimes in past 5 years"
    },
    "Registration": {
      "description": "Entry in Insurance Distribution Register",
      "finnish_name": "Vakuutusedustajarekisteri",
      "attributes": ["registrationNumber", "registrationDate", "status", "changes"],
      "legal_basis": "Sections 6-15",
      "required_information": {
        "natural_person": ["name", "businessName", "possibleTradingName", "personalId", "address", "businessAddress"],
        "legal_entity": ["businessName", "companyId", "registeredAddress", "businessAddress", "boardMembers", "responsiblePersons"],
        "type_of_intermediary": ["broker_or_agent", "primary_or_parttime"],
        "insurance_types": ["life", "non_life", "pension", "reinsurance"],
        "principals": ["insurance_companies_represented"],
        "liability_insurance": ["provider", "coverage_amount"],
        "eea_states": ["states_of_operation"],
        "ownership": ["10%+_shareholders", "controlling_entities"],
        "sanctions": ["administrative_measures", "prohibitions"],
        "removal": ["removal_date", "reason"]
      }
    },
    "SupervisoryAuthority": {
      "description": "Financial Supervisory Authority (FIN-FSA)",
      "finnish_name": "Finanssivalvonta",
      "attributes": ["name", "contact", "supervisionScope"],
      "legal_basis": "Section 66"
    },
    "ProfessionalLiabilityInsurance": {
      "finnish_name": "Vastuuvakuutus",
      "description": "Mandatory professional liability insurance for brokers",
      "legal_basis": "Section 58",
      "minimum_coverage": {
        "per_claim_eur": 1564610,
        "annual_aggregate_eur": 2315610
      },
      "conditions": [
        "Must cover entire EEA",
        "Minimum 2 months cancellation notice",
        "No deductible for damaged party",
        "Insurer must be EEA-based",
        "Covers claims within contract period + 3 years"
      ]
    },
    "Compensation": {
      "description": "Damages or compensation for breach of duty",
      "finnish_name": "Vahingonkorvaus",
      "attributes": ["amount", "basis", "liabilityType"],
      "legal_basis": "Sections 74-75"
    },
    "AdministrativeSanction": {
      "description": "Administrative penalties for violations",
      "attributes": ["type", "amount", "reason"],
      "legal_basis": "Sections 70-71",
      "subclasses": {
        "Prohibition": {"description": "Prohibition to conduct insurance distribution", "legal_basis": "Section 70"},
        "AdministrativeFine": {"description": "Monetary penalty", "legal_basis": "Section 71"},
        "Warning": {"description": "Public warning", "legal_basis": "Section 71"},
        "Deregistration": {"description": "Removal from register", "legal_basis": "Section 73"}
      }
    },
    "InsuranceDistributionBoard": {
      "finnish_name": "Vakuutusedustuslautakunta",
      "description": "Board that organizes broker examinations",
      "legal_basis": "Section 61",
      "functions": ["organize_broker_examinations", "grant_broker_certificates"],
      "composition": ["chair", "vice_chair", "3-6_members", "alternates"]
    },
    "BrokerExamination": {
      "finnish_name": "Vakuutusmeklarikoe",
      "description": "Professional exam for insurance brokers",
      "legal_basis": "Section 62",
      "requirements": ["minimum_2_exams_per_year", "30_days_notice", "published_materials"]
    },
    "ClientAgreement": {
      "finnish_name": "Toimeksiantosopimus",
      "description": "Written agreement between broker and client",
      "legal_basis": "Section 56",
      "requirements": ["written_form", "copy_to_client", "content_requirements", "duration", "fees"]
    },
    "WhistleblowingProcedure": {
      "finnish_name": "Ilmoitusmenettely",
      "description": "Internal reporting procedure for violations",
      "legal_basis": "Section 72",
      "requirements": ["independent_channel", "confidential_reporter", "proper_handling", "protection"]
    },
    "Confidentiality": {
      "finnish_name": "Vaitiolovelvollisuus",
      "description": "Professional confidentiality obligation",
      "legal_basis": "Sections 79-81",
      "exceptions": ["supervisory_authorities", "legal_proceedings", "research_statistics"]
    },
    "ContinuingEducation": {
      "finnish_name": "Ammattipätevyyden ylläpito",
      "description": "Ongoing professional development requirements",
      "legal_basis": "Section 20",
      "minimum_hours": 15,
      "frequency": "per_year"
    },
    "AdministrativeMeasure": {
      "finnish_name": "Hallinnollinen toimenpide",
      "description": "Administrative measures and sanctions",
      "legal_basis": "Sections 71-73",
      "types": ["warning", "prohibition", "fine", "deregistration"]
    },
    "TyingPractice": {
      "finnish_name": "Kytkykauppa",
      "description": "Tying and bundling practices",
      "legal_basis": "Sections 40-41",
      "prohibited_for": "Consumer insurance",
      "rules_for_business": "Disclosure required if bundled separately"
    },
    "MarketingPractice": {
      "finnish_name": "Markkinointi",
      "description": "Marketing requirements for insurance",
      "legal_basis": "Section 34",
      "requirements": ["clear_identification", "truthful_information", "no_misleading"]
    },
    "ProfessionalCustomer": {
      "finnish_name": "Ammattimainen asiakas",
      "description": "Professional customer as defined in investment services law",
      "legal_basis": "Section 5(13)"
    },
    "Incentive": {
      "finnish_name": "Kannustin",
      "description": "Incentives and commissions in insurance distribution",
      "legal_basis": "Section 46",
      "rules": ["must_not_impair_service_quality", "disclosure_required"]
    },
    "InvestmentInsurance": {
      "description": "Life insurance with investment component",
      "finnish_name": "Sijoitusvakuutus",
      "attributes": ["fundValue", "surrenderValue", "riskLevel"],
      "legal_basis": "Section 5(12)",
      "additional_requirements": "Sections 44-54",
      "exclusions": ["pure_death_benefit", "occupational_pension", "state_pension"],
      "types": ["unit_linked", "capital_ redemption", "other_investment_linked"]
    },
    "SuitabilityAssessment": {
      "finnish_name": "Soveltuvuuden arviointi",
      "description": "Assessment of suitability for investment insurance",
      "legal_basis": "Sections 49-50",
      "required_for": "Personal recommendations",
      "assesses": ["customer_experience", "customer_knowledge", "financial_situation", "investment_objectives", "risk_tolerance"]
    },
    "AppropriatenessAssessment": {
      "finnish_name": "Asianmukaisuuden arviointi",
      "description": "Assessment of appropriateness for non-advised sales",
      "legal_basis": "Section 49"
    },
    "Notification": {
      "finnish_name": "Ilmoitus",
      "description": "Cross-border notification requirements",
      "legal_basis": "Sections 22-23",
      "types": ["service_notification", "establishment_notification"]
    },
    "InformationRequest": {
      "finnish_name": "Tietojen pyyntö",
      "description": "Supervisory authority right to request information",
      "legal_basis": "Section 76"
    },
    "ServiceSummary": {
      "finnish_name": "Palveluiden yhteenveto",
      "description": "Regular summary of services provided to customer",
      "legal_basis": "Section 52"
    },
    "SustainabilityDisclosure": {
      "finnish_name": "Kestävyystiedot",
      "description": "Sustainability-related disclosures for insurance products",
      "legal_basis": "Section 54a"
    },
    "PensionProduct": {
      "finnish_name": "Eläketuote",
      "description": "Pension product as defined in law",
      "legal_basis": "Section 5"
    }
  },
  "relationships": [
    {"from": "InsuranceBroker", "to": "InsuranceProvider", "type": "arranges_coverage_with"},
    {"from": "InsuranceAgent", "to": "InsuranceProvider", "type": "represents"},
    {"from": "InsuranceDistributionService", "to": "Customer", "type": "provides_to"},
    {"from": "InsuranceProduct", "to": "Customer", "type": "covers"},
    {"from": "InsuranceBroker", "to": "Registration", "type": "has"},
    {"from": "InsuranceAgent", "to": "Registration", "type": "has"},
    {"from": "InsuranceBroker", "to": "ProfessionalQualification", "type": "holds"},
    {"from": "InsuranceBroker", "to": "GoodReputation", "type": "meets_requirements"},
    {"from": "SupervisoryAuthority", "to": "InsuranceBroker", "type": "supervises"},
    {"from": "SupervisoryAuthority", "to": "InsuranceAgent", "type": "supervises"},
    {"from": "Customer", "to": "InsuranceProduct", "type": "purchases"},
    {"from": "Customer", "to": "Compensation", "type": "entitled_to"},
    {"from": "InsuranceBroker", "to": "ProfessionalLiabilityInsurance", "type": "must_have"}
  ],
  "rules": [
    {
      "name": "BrokerRegistrationRequirement",
      "condition": "entity.type = InsuranceBroker AND entity.activity = primary",
      "conclusion": "entity.must_register = true",
      "legal_basis": "Section 6"
    },
    {
      "name": "AgentRegistrationRequirement",
      "condition": "entity.type = InsuranceAgent",
      "conclusion": "entity.must_register = true",
      "legal_basis": "Section 6"
    },
    {
      "name": "GoodReputationRequirement",
      "condition": "person.conviction_relevant = true AND conviction.within_5_years = true",
      "conclusion": "person.good_reputation = false",
      "legal_basis": "Section 16"
    },
    {
      "name": "ProfessionalCompetenceRequirement",
      "condition": "broker.professional_exam = false AND broker.equivalent_qualification = false",
      "conclusion": "broker.can_not_register = true",
      "legal_basis": "Section 18"
    },
    {
      "name": "ContinuingEducationRequirement",
      "condition": "professional.annual_training_hours < 15",
      "conclusion": "professional.compliance = false",
      "legal_basis": "Section 20"
    },
    {
      "name": "ProductGovernanceRequirement",
      "condition": "provider.offers_insurance_products = true",
      "conclusion": "provider.must_have_product_governance = true",
      "legal_basis": "Section 42"
    },
    {
      "name": "InvestmentInsuranceSuitability",
      "condition": "product.type = InvestmentInsurance AND customer.profile = undefined",
      "conclusion": "provider.must_assess_suitability = true",
      "legal_basis": "Section 49"
    },
    {
      "name": "DisclosureRequirement",
      "condition": "intermediary.provides_advice = true",
      "conclusion": "intermediary.must_disclose_commission = true",
      "legal_basis": "Section 38"
    },
    {
      "name": "ProfessionalLiabilityInsurance",
      "condition": "broker.registers = true",
      "conclusion": "broker.must_have_liability_insurance = true",
      "legal_basis": "Section 58",
      "minimum_coverage": "1,564,610 EUR per claim"
    },
    {
      "name": "ClientAssetsSegregation",
      "condition": "broker.holds_client_funds = true",
      "conclusion": "broker.must_segregate_assets = true",
      "legal_basis": "Section 59"
    },
    {
      "name": "CrossBorderNotification",
      "condition": "intermediary.plans_operations_in_EEA = true",
      "conclusion": "intermediary.must_notify_authority = true",
      "legal_basis": "Section 22"
    },
    {
      "name": "ProfessionalTitleProtection",
      "condition": "entity.uses_title = InsuranceBroker AND entity.not_registered = true",
      "conclusion": "entity.illegal_practice = true",
      "legal_basis": "Section 55"
    },
    {
      "name": "InformationRequestRight",
      "condition": "authority.requests_information = true",
      "conclusion": "entity.must_provide = true",
      "legal_basis": "Section 76"
    },
    {
      "name": "SupervisoryPowers",
      "condition": "entity.violates_law = true",
      "conclusion": "authority.may_impose_sanction = true",
      "legal_basis": "Sections 70-71"
    },
    {
      "name": "RightToCompensation",
      "condition": "broker.breaches_duty = true AND customer.suffers_damage = true",
      "conclusion": "customer.entitled_to_compensation = true",
      "legal_basis": "Section 74"
    }
  ]
}

{
  "ontology": {
    "name": "Finnish Patient Insurance Ontology",
    "version": "2.0",
    "based_on": "Potilasvakuutuslaki (Patient Insurance Act) 948/2019",
    "language": "en",
    "effective_date": "2021-01-01",
    "source": "https://www.finlex.fi/fi/laki/alkup/2019/20190948",
    "parts": 7,
    "sections": "70 sections",
    "entities": {
      "Person": {
        "description": "Natural person involved in patient insurance",
        "attributes": ["personalId", "firstName", "lastName"],
        "subclasses": {
          "PolicyHolder": {
            "description": "Entity that has made insurance contract with insurance company",
            "legal_basis": "Section 2(1)"
          },
          "Insured": {
            "description": "Person for whose benefit insurance is valid",
            "legal_basis": "Section 2(2)"
          },
          "Patient": {
            "description": "Person using or target of health and medical care services",
            "legal_basis": "Section 2(7)",
            "subclasses": ["HealthcarePatient", "BloodDonor", "OrganDonor", "ResearchSubject"]
          },
          "HealthcareProfessional": {
            "description": "Health care professional as defined in Health Care Professionals Act",
            "legal_basis": "Section 2(4)"
          },
          "HealthcareProvider": {
            "description": "Health care unit as defined in Patient Rights Act",
            "legal_basis": "Section 2(5)"
          },
          "InjuredParty": {
            "description": "Patient who suffered personal injury",
            "legal_basis": "Section 2(8)"
          },
          "Survivor": {
            "description": "Family member entitled to compensation after patient death",
            "subclasses": ["Spouse", "Child", "DependentParent"]
          }
        }
      },
      "Healthcare": {
        "description": "Health and medical care services",
        "legal_basis": "Section 2(6)",
        "subclasses": {
          "MedicalExamination": {
            "description": "Procedures to determine patient's health condition"
          },
          "Treatment": {
            "description": "Procedures to restore or maintain patient's health"
          },
          "FirstAid": {
            "description": "Emergency care as per Section 2(6)(d)",
            "legal_basis": "Section 2(6)(d)"
          },
          "PharmacyService": {
            "description": "Dispensing of prescription medicines",
            "legal_basis": "Section 2(6)(c)"
          },
          "EmergencyMedicalService": {
            "description": "EMS as per Health Care Act Section 40",
            "legal_basis": "Section 2(6)(b)"
          }
        }
      },
      "HealthcareProviderOrganization": {
        "description": "Entity providing healthcare services",
        "legal_basis": "Section 6",
        "subclasses": {
          "PublicHealthcareEntity": {
            "description": "Public healthcare provider - company, foundation, or independent practitioner",
            "legal_basis": "Section 6(1)"
          },
          "PrivateHealthcareEntity": {
            "description": "Private healthcare provider",
            "legal_basis": "Section 6(1)"
          },
          "Employer": {
            "description": "Employer with health care professionals in service",
            "legal_basis": "Section 6(1)"
          }
        }
      },
      "Insurance": {
        "description": "Patient insurance contract",
        "subclasses": {
          "PatientInsurance": {
            "description": "Patient insurance under this Act",
            "legal_basis": "Section 1"
          }
        }
      },
      "PatientInjury": {
        "description": "Personal injury compensable under this Act",
        "legal_basis": "Section 2(8), Section 23",
        "subclasses": {
          "TreatmentInjury": {
            "description": "Injury from examination, treatment, or similar procedure, or omission",
            "legal_basis": "Section 23(1)(1)",
            "condition": "Experienced health professional would have treated differently and likely avoided injury"
          },
          "DeviceInjury": {
            "description": "Injury from defect in medical device, instrument, or consumable",
            "legal_basis": "Section 23(1)(2)"
          },
          "ImplantInjury": {
            "description": "Injury from bodily-installed medical device not being as safe as expected",
            "legal_basis": "Section 23(1)(3)"
          },
          "InfectionInjury": {
            "description": "Infection acquired during healthcare",
            "legal_basis": "Section 23(1)(4)",
            "condition": "Patient should not have to tolerate infection considering predictability, severity, nature of condition"
          },
          "AccidentInjury": {
            "description": "Accident during examination/treatment or patient transport",
            "legal_basis": "Section 23(1)(5)"
          },
          "FacilityInjury": {
            "description": "Injury from fire or other facility damage",
            "legal_basis": "Section 23(1)(6)"
          },
          "MedicationInjury": {
            "description": "Injury from medication dispensed contrary to law/regulation",
            "legal_basis": "Section 23(1)(7)"
          },
          "SevereConsequenceInjury": {
            "description": "Permanent serious illness/injury or death from treatment",
            "legal_basis": "Section 23(1)(8)",
            "condition": "Consequence unreasonable considering severity, nature of condition, rarity, risk level"
          }
        }
      },
      "Compensation": {
        "description": "Payment for patient injury",
        "legal_basis": "Sections 23-30",
        "subclasses": {
          "MedicalExpenseCompensation": {
            "description": "Costs of necessary medical care",
            "legal_basis": "Section 24, references Tort Liability Act Chapter 5"
          },
          "LostEarningsCompensation": {
            "description": "Loss of earnings/ livelihood",
            "legal_basis": "Section 24"
          },
          "PermanentInjuryCompensation": {
            "description": "Compensation for permanent injury",
            "legal_basis": "Section 24"
          },
          "PainAndSuffering": {
            "description": "Compensation for pain and suffering",
            "legal_basis": "Section 24"
          },
          "DeathCompensation": {
            "description": "Compensation in case of patient death",
            "legal_basis": "Section 24"
          },
          "VocationalRehabilitation": {
            "description": "Vocational rehabilitation costs",
            "legal_basis": "Sections 25-27"
          },
          "RehabilitationAllowance": {
            "description": "Allowance during rehabilitation",
            "legal_basis": "Section 27"
          }
        }
      },
      "Claim": {
        "description": "Patient injury compensation claim",
        "legal_basis": "Sections 31-36",
        "subclasses": {
          "InitialClaim": {
            "description": "Initial compensation claim",
            "legal_basis": "Section 31"
          },
          "Appeal": {
            "description": "Appeal of claim decision",
            "legal_basis": "Section 38"
          }
        }
      },
      "Institution": {
        "description": "Organizations involved in patient insurance",
        "subclasses": {
          "PatientInsuranceCentre": {
            "description": "Patient Insurance Centre (Potilasvakuutuskeskus)",
            "legal_basis": "Section 5",
            "responsibilities": [
              "Manages compensation operations",
              "Ensures consistent compensation practice",
              "Acts as central body"
            ]
          },
          "TrafficAndPatientInjuryBoard": {
            "description": "Traffic and Patient Injury Board",
            "legal_basis": "Section 37"
          }
        }
      }
    },
    "relationships": [
      {"from": "Patient", "to": "HealthcareProviderOrganization", "type": "receives_care_from"},
      {"from": "HealthcareProviderOrganization", "to": "Insurance", "type": "must_have"},
      {"from": "PatientInjury", "to": "Patient", "type": "suffers"},
      {"from": "PatientInjury", "to": "HealthcareProviderOrganization", "type": "occurs_at"},
      {"from": "Compensation", "to": "PatientInjury", "type": "compensates"},
      {"from": "Claim", "to": "PatientInjury", "type": "filed_for"},
      {"from": "PatientInsuranceCentre", "to": "Compensation", "type": "pays"}
    ],
    "rules": [
      {
        "name": "InsuranceObligation",
        "condition": "healthcareProviderOrganization.type IN [PublicHealthcareEntity, PrivateHealthcareEntity, Employer]",
        "conclusion": "healthcareProviderOrganization.mustHave = PatientInsurance",
        "legal_basis": "Section 6"
      },
      {
        "name": "CompensableInjury",
        "condition": "patientInjury.type IN [TreatmentInjury, DeviceInjury, ImplantInjury, InfectionInjury, AccidentInjury, FacilityInjury, MedicationInjury, SevereConsequenceInjury] AND patientInjury.causation = probable",
        "conclusion": "patientInjury.compensable = true",
        "legal_basis": "Section 23"
      },
      {
        "name": "ClaimTimeLimit",
        "condition": "patientInjury.eventDate > 10 years ago",
        "conclusion": "claim.timeLimit = expired",
        "legal_basis": "Section 31(1)"
      },
      {
        "name": "ClaimKnowledgeTimeLimit",
        "condition": "patientInjury.knowledgeDate > 3 years ago",
        "conclusion": "claim.timeLimit = expired",
        "legal_basis": "Section 31(1)"
      }
    ],
    "metadata": {
      "law_name": "Potilasvakuutuslaki",
      "law_number": "948/2019",
      "effective_date": "2021-01-01",
      "previous_act": "585/1986",
      "chapters": 7,
      "total_sections": 70
    }
  }
}

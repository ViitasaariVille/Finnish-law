# Swarm Configuration
# Copy this file to .env and fill in your values

# LLM Providers (at least one required)

# Anthropic Claude (recommended for legal analysis)
ANTHROPIC_API_KEY=your_anthropic_key_here

# Moonshot Kimi K2 (recommended for Finnish language & long context)
MOONSHOT_API_KEY=your_moonshot_key_here

# MiniMax M2.5 (recommended for cost-efficient pattern matching)
MINIMAX_API_KEY=your_minimax_key_here

# Optional: Azure OpenAI
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=

# Model Configuration
DEFAULT_MODEL=claude
TEMPERATURE=0.2  # Lower for more deterministic legal analysis
MAX_TOKENS=4000

# Multi-Model Routing
USE_ENSEMBLE_VALIDATION=true
FALLBACK_CHAIN=claude,kimi-k2,minimax-m2.5
COST_OPTIMIZATION=true

# Agent Model Assignment (override defaults)
LAW_READER_MODEL=kimi-k2
LEGAL_ANALYST_MODEL=claude
RULE_EXTRACTOR_MODEL=minimax-m2.5
VALIDATOR_MODEL=claude
DMN_FORMATTER_MODEL=minimax-m2.5
GAP_ANALYZER_MODEL=kimi-k2

# Agent Configuration
VERBOSE=true
MAX_ITERATIONS=5

# Output Settings
OUTPUT_FORMAT=json  # json, yaml, or dmn
INCLUDE_SOURCE_TEXT=true
LANGUAGE=fi  # fi or en

# Finnish Law Sources
FINLEX_BASE_URL=https://www.finlex.fi/fi/laki/alkup/

# Validation Settings
STRICT_VALIDATION=true
REQUIRE_LEGAL_BASIS=true
CHECK_CROSS_REFERENCES=true

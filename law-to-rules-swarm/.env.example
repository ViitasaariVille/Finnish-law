# Swarm Configuration
# Copy this file to .env and fill in your values

# LLM Provider (choose one)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Optional: Azure OpenAI
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=

# Model Configuration
DEFAULT_MODEL=gpt-4
TEMPERATURE=0.2  # Lower for more deterministic legal analysis
MAX_TOKENS=4000

# Agent Configuration
VERBOSE=true
MAX_ITERATIONS=5

# Output Settings
OUTPUT_FORMAT=json  # json, yaml, or dmn
INCLUDE_SOURCE_TEXT=true
LANGUAGE=fi  # fi or en

# Finnish Law Sources
FINLEX_BASE_URL=https://www.finlex.fi/fi/laki/alkup/

# Validation Settings
STRICT_VALIDATION=true
REQUIRE_LEGAL_BASIS=true
CHECK_CROSS_REFERENCES=true

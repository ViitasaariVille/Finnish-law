# Swarm Configuration
# Copy this file to .env and fill in your values

# ===========================================
# OPTION 1: Kimi + MiniMax Only (Recommended)
# ===========================================
MOONSHOT_API_KEY=your_moonshot_key_here
MINIMAX_API_KEY=your_minimax_key_here

# ===========================================
# OPTION 2: All Models (Claude + Kimi + MiniMax)
# ===========================================
# ANTHROPIC_API_KEY=your_anthropic_key_here
# MOONSHOT_API_KEY=your_moonshot_key_here
# MINIMAX_API_KEY=your_minimax_key_here

# ===========================================
# Model Selection Mode
# ===========================================
# Set which router to use:
# - "kimi-minimax": Use only Kimi K2 and MiniMax M2.5
# - "multi": Use all available models (Claude, Kimi, MiniMax)
SWARM_MODE=kimi-minimax

# ===========================================
# Per-Agent Model Overrides (optional)
# ===========================================
# LAW_READER_MODEL=kimi-k2
# LEGAL_ANALYST_MODEL=kimi-k2
# RULE_EXTRACTOR_MODEL=minimax-m2.5
# VALIDATOR_MODEL=kimi-k2
# DMN_FORMATTER_MODEL=minimax-m2.5
# GAP_ANALYZER_MODEL=kimi-k2

# ===========================================
# General Settings
# ===========================================
TEMPERATURE=0.2
MAX_TOKENS=4000
VERBOSE=true

# Output
OUTPUT_FORMAT=json
INCLUDE_SOURCE_TEXT=true
LANGUAGE=fi

# Finnish Law Sources
FINLEX_BASE_URL=https://www.finlex.fi/fi/laki/alkup/

# Validation
STRICT_VALIDATION=true
REQUIRE_LEGAL_BASIS=true

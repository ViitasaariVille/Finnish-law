{
  "model": {
    "name": "Finnish Work Accident Insurance DMN",
    "namespace": "https://tyotapaturma-fi/dmn/work-accident-insurance",
    "version": "1.1",
    "description": "DMN-compatible business rules for Työtapaturma- ja ammattitautilaki (459/2015)",
    "based_on": "Työtapaturma- ja ammattitautilaki (459/2015)",
    "source": "https://www.finlex.fi/fi/laki/alkup/2015/20150459",
    "decisions": [
      {
        "name": "InsuranceObligation",
        "description": "Determine if employer has mandatory insurance obligation",
        "hit_policy": "UNIQUE",
        "input_variables": ["person.type", "person.employment_status"],
        "output_variable": "insurance_required",
        "legal_source": "Part I, Sections 1-14",
        "rules": [
          {"inputs": ["Employee", "employed"], "output": "MandatoryInsurance", "legal_basis": "Section 3(1)", "source_text": "Työnantajan on otettava vakuutus"},
          {"inputs": ["Employee", "probation"], "output": "MandatoryInsurance", "legal_basis": "Section 3(1)", "source_text": "Koeaikana vakuutusvelvollisuus"},
          {"inputs": ["Employee", "contract"], "output": "MandatoryInsurance", "legal_basis": "Section 3(2)", "source_text": "Työsopimuksen perusteella"},
          {"inputs": ["Entrepreneur", "YEL_insured"], "output": "VoluntaryWorkTimeInsurance", "legal_basis": "Sections 188-190", "source_text": "Yrittäjän vapaaehtoinen vakuutus"},
          {"inputs": ["Farmer", "any"], "output": "Excluded", "legal_basis": "Section 11", "source_text": "Maa- ja metsätalousyrittäjät"},
          {"inputs": ["ForeignWorker", "EU"], "output": "MandatoryInsurance", "legal_basis": "Section 8(1)", "source_text": "EU-kansalaiset"},
          {"inputs": ["ForeignWorker", "non_EU"], "output": "Check bilateral", "legal_basis": "Section 8(2)", "source_text": "Kolmansien maiden kansalaiset"}
        ]
      },
      {
        "name": "CompensableEvent",
        "description": "Determine if event is compensable under the law",
        "hit_policy": "FIRST",
        "input_variables": ["event.type", "event.location", "event.timing"],
        "output_variable": "compensable",
        "legal_source": "Part II, Sections 15-35",
        "rules": [
          {"inputs": ["WorkplaceAccident", "workplace", "during_work"], "output": "Compensable", "legal_basis": "Section 17(1)", "source_text": "Työtapaturma"},
          {"inputs": ["WorkplaceAccident", "workplace", "before_after"], "output": "Compensable", "legal_basis": "Section 18", "source_text": "Muut vammat"},
          {"inputs": ["WorkplaceAccident", "workplace", "breaks"], "output": "Compensable", "legal_basis": "Section 17(3)", "source_text": "Tauolla"},
          {"inputs": ["CommuteAccident", "home_work_route", "direct_route"], "output": "Compensable", "legal_basis": "Section 21(1)", "source_text": "Kotimatkan aikana"},
          {"inputs": ["CommuteAccident", "home_work_route", "detour_necessary"], "output": "Compensable", "legal_basis": "Section 21(2)", "source_text": "Välttämätön kiertotie"},
          {"inputs": ["CommuteAccident", "home_work_route", "detour_personal"], "output": "Not compensable", "legal_basis": "Section 21(3)", "source_text": "Oma-aloitteinen kiertotie"},
          {"inputs": ["BusinessTripAccident", "work_travel", "during_travel"], "output": "Compensable", "legal_basis": "Section 22", "source_text": "Työmatkalla"},
          {"inputs": ["BusinessTripAccident", "accommodation", "any"], "output": "Compensable", "legal_basis": "Section 23", "source_text": "Majoituksen aikana"},
          {"inputs": ["BusinessTripAccident", "free_time", "during_trip"], "output": "Limited", "legal_basis": "Section 24", "source_text": "Vapaa-aikana"},
          {"inputs": ["OccupationalDisease", "any", "diagnosed"], "output": "Compensable", "legal_basis": "Section 26(1)", "source_text": "Ammattitauti"},
          {"inputs": ["RepetitiveStrainInjury", "any", "any"], "output": "Compensable", "legal_basis": "Section 33", "source_text": "Yksipuolinen kuormitus"},
          {"inputs": ["ViolenceIncident", "work_related", "during_work"], "output": "Compensable", "legal_basis": "Section 34", "source_text": "Väkivalta"},
          {"inputs": ["PsychologicalInjury", "work_related", "serious"], "output": "Compensable", "legal_basis": "Section 35", "source_text": "Psykografkinen sairaus"}
        ]
      },
      {
        "name": "CompensationType",
        "description": "Determine type of compensation based on injury",
        "hit_policy": "FIRST",
        "input_variables": ["injury.type", "injury.severity", "injury.duration"],
        "output_variable": "compensation_type",
        "legal_source": "Part III, Sections 36-109",
        "rules": [
          {"inputs": ["PhysicalInjury", "minor", "< 1 year"], "output": "MedicalExpenses", "legal_basis": "Section 36", "source_text": "Sairaanhoito"},
          {"inputs": ["PhysicalInjury", "moderate", "1-3 years"], "output": "MedicalExpenses + LostWages", "legal_basis": "Sections 36, 55", "source_text": "Sairaanhoito + ansionmenetys"},
          {"inputs": ["PhysicalInjury", "severe", "> 3 years"], "output": "MedicalExpenses + LostWages + Disability", "legal_basis": "Sections 36, 55, 83", "source_text": "Kokonaiskorvaus"},
          {"inputs": ["PhysicalInjury", "permanent", "any"], "output": "PermanentDisabilityCompensation", "legal_basis": "Section 83(1)", "source_text": "Pysyvä haitta"},
          {"inputs": ["OccupationalDisease", "any", "any"], "output": "MedicalExpenses + LostWages", "legal_basis": "Sections 26-32", "source_text": "Ammattitaudin korvaus"},
          {"inputs": ["MentalInjury", "moderate", "any"], "output": "Rehabilitation", "legal_basis": "Section 88(1)", "source_text": "Kuntoutus"},
          {"inputs": ["Death", "any", "any"], "output": "DeathCompensation", "legal_basis": "Section 99(1)", "source_text": "Kuoleman korvaus"}
        ]
      },
      {
        "name": "CompensationAmount",
        "description": "Calculate compensation amount",
        "hit_policy": "UNIQUE",
        "input_variables": ["compensation_type", "income.annual", "injury.severity", "work_ability.lost_percentage"],
        "output_variable": "compensation_amount",
        "legal_source": "Part III, Sections 36-109",
        "rules": [
          {"inputs": ["LostWages", "any", "any", "100%"], "output": "income.annual / 365 * days", "legal_basis": "Section 56(1)", "source_text": "Täysi ansionmenetys"},
          {"inputs": ["LostWages", "any", "any", "50%"], "output": "income.annual / 365 * days * 0.5", "legal_basis": "Section 56(2)", "source_text": "Osittainen ansionmenetys"},
          {"inputs": ["LostWages", "any", "any", "0%"], "output": "0", "legal_basis": "Section 56", "source_text": "Ei ansionmenetystä"},
          {"inputs": ["PermanentDisability", "any", "10-19%", "any"], "output": "income.annual * 0.1", "legal_basis": "Section 84(1)", "source_text": "Haittalisä 10-19%"},
          {"inputs": ["PermanentDisability", "any", "20-50%", "any"], "output": "income.annual * 0.2", "legal_basis": "Section 84(1)", "source_text": "Haittalisä 20-50%"},
          {"inputs": ["PermanentDisability", "any", "51-100%", "any"], "output": "income.annual", "legal_basis": "Section 84(2)", "source_text": "Täysi haittalisä"},
          {"inputs": ["Death", "any", "any", "any"], "output": "Section 99-109 rates", "legal_basis": "Sections 99-109", "source_text": "Kuoleman korvaukset"}
        ]
      },
      {
        "name": "MedicalCareCoverage",
        "description": "Determine medical care coverage",
        "hit_policy": "FIRST",
        "input_variables": ["treatment.type", "treatment.necessity", "treatment.provider"],
        "output_variable": "coverage",
        "legal_source": "Part III, Sections 36-54",
        "rules": [
          {"inputs": ["EmergencyCare", "required", "public"], "output": "100%", "legal_basis": "Section 37(1)", "source_text": "Julkisen terveydenhuollon hoito"},
          {"inputs": ["EmergencyCare", "required", "private"], "output": "100% (reimbursement)", "legal_basis": "Section 37(2)", "source_text": "Yksityisen hoidon korvaus"},
          {"inputs": ["Surgery", "required", "any"], "output": "100%", "legal_basis": "Section 38(1)", "source_text": "Leikkaushoito"},
          {"inputs": ["Medicines", "prescribed", "pharmacy"], "output": "100% (drug list)", "legal_basis": "Section 45", "source_text": "Lääkkeet"},
          {"inputs": ["Rehabilitation", "medical_necessity", "any"], "output": "100%", "legal_basis": "Section 88(1)", "source_text": "Kuntoutus"},
          {"inputs": ["DentalTreatment", "accident_related", "any"], "output": "100%", "legal_basis": "Section 48", "source_text": "Hammashoito"},
          {"inputs": ["TravelToTreatment", "required", "any"], "output": "Kilometre allowance", "legal_basis": "Section 50", "source_text": "Matkakustannukset"},
          {"inputs": ["Prosthesis", "required", "any"], "output": "100%", "legal_basis": "Section 47", "source_text": "Silmälasit, proteesit"}
        ]
      },
      {
        "name": "ClaimTimeLimit",
        "description": "Determine claim submission time limit",
        "hit_policy": "UNIQUE",
        "input_variables": ["claim.type", "injury.timing"],
        "output_variable": "time_limit",
        "legal_source": "Part IV, Section 110",
        "rules": [
          {"inputs": ["WorkAccident", "within_3_years"], "output": "3 years from accident", "legal_basis": "Section 110(1)", "source_text": "3 vuoden määräaika"},
          {"inputs": ["WorkAccident", "after_3_years"], "output": "Claim barred", "legal_basis": "Section 110(3)", "source_text": "Määräajan umpeutuminen"},
          {"inputs": ["OccupationalDisease", "any"], "output": "3 years from diagnosis", "legal_basis": "Section 110(2)", "source_text": "Ammattitaudin määräaika"},
          {"inputs": ["DeathBenefit", "within_3_years"], "output": "3 years from death", "legal_basis": "Section 110(1)", "source_text": "Kuoleman korvaus"},
          {"inputs": ["SurvivorBenefit", "any"], "output": "3 years from death", "legal_basis": "Section 110(1)", "source_text": "Leskeneläke"}
        ]
      },
      {
        "name": "RehabilitationEligibility",
        "description": "Determine rehabilitation eligibility",
        "hit_policy": "FIRST",
        "input_variables": ["injury.severity", "work_ability.reduced", "rehabilitation.medical_recommendation"],
        "output_variable": "eligible",
        "legal_source": "Part III, Sections 88-98",
        "rules": [
          {"inputs": ["severe", "yes", "yes"], "output": "Full rehabilitation", "legal_basis": "Section 88(1)", "source_text": "Ammatillinen kuntoutus"},
          {"inputs": ["moderate", "yes", "yes"], "output": "Vocational rehabilitation", "legal_basis": "Section 89(1)", "source_text": "Ammatillinen kuntoutus"},
          {"inputs": ["minor", "no", "no"], "output": "Medical rehabilitation only", "legal_basis": "Section 88(1)", "source_text": "Lääkinnällinen kuntoutus"},
          {"inputs": ["any", "any", "no"], "output": "Not eligible", "legal_basis": "Section 88(1)", "source_text": "Ei oikeutta kuntoutukseen"}
        ]
      },
      {
        "name": "InsurancePremium",
        "description": "Calculate insurance premium",
        "hit_policy": "UNIQUE",
        "input_variables": ["employer.industry_risk", "employer.payroll", "employer.claims_history"],
        "output_variable": "premium",
        "legal_source": "Part V, Sections 156-186",
        "rules": [
          {"inputs": ["low_risk", "any", "no_claims"], "output": "payroll * 0.005", "legal_basis": "Section 166(1)", "source_text": "Vakuutusmaksun peruste"},
          {"inputs": ["medium_risk", "any", "no_claims"], "output": "payroll * 0.01", "legal_basis": "Section 166(1)", "source_text": "Vakuutusmaksun peruste"},
          {"inputs": ["high_risk", "any", "no_claims"], "output": "payroll * 0.02", "legal_basis": "Section 166(1)", "source_text": "Korkea riski"},
          {"inputs": ["any", "any", "with_claims"], "output": "base_premium + risk loading", "legal_basis": "Sections 171-176", "source_text": "Lisämaksu"}
        ]
      },
      {
        "name": "AppealsProcess",
        "description": "Determine appeals process",
        "hit_policy": "UNIQUE",
        "input_variables": ["decision.type", "claimaint.disagreement"],
        "output_variable": "appeal_path",
        "legal_source": "Part VIII, Sections 237-247",
        "rules": [
          {"inputs": ["Rejection", "yes"], "output": "Appeal to Insurance Company -> Accident Board", "legal_basis": "Section 237(1)", "source_text": "Valitus vakuutusyhtiölle"},
          {"inputs": ["AmountDispute", "yes"], "output": "Appeal to Accident Compensation Board", "legal_basis": "Section 238", "source_text": "Tapaturma-asianlautakunta"},
          {"inputs": ["LateDecision", "yes"], "output": "Complaint + Late interest", "legal_basis": "Section 146", "source_text": "Viivästyskorotus"},
          {"inputs": ["AnyDecision", "no"], "output": "No appeal", "legal_basis": "N/A", "source_text": "Ei valitusta"}
        ]
      },
      {
        "name": "SurvivorBenefits",
        "description": "Determine survivor benefit eligibility",
        "hit_policy": "FIRST",
        "input_variables": ["survivor.relationship", "survivor.age", "deceased.contributory"],
        "output_variable": "benefit",
        "legal_source": "Part III, Sections 99-109",
        "rules": [
          {"inputs": ["Spouse", "any", "yes"], "output": "Spouse pension", "legal_basis": "Section 100(1)", "source_text": "Leskeneläke"},
          {"inputs": ["Spouse", "any", "no"], "output": "Lump sum", "legal_basis": "Section 107(1)", "source_text": "Kertakorvaus"},
          {"inputs": ["Child", "under_18", "yes"], "output": "Child pension + orphan allowance", "legal_basis": "Sections 101-102", "source_text": "Lapseneläke"},
          {"inputs": ["Child", "18-24_student", "yes"], "output": "Student orphan pension", "legal_basis": "Section 103", "source_text": "Opiskelijan eläke"},
          {"inputs": ["Dependent", "any", "yes"], "output": "Dependent allowance", "legal_basis": "Section 105", "source_text": "Huollettavan korvaus"}
        ]
      }
    ],
    "metadata": {
      "created": "2026-02-24",
      "updated": "2026-02-24",
      "dmn_version": "1.3",
      "compatible_engines": ["Camunda DMN", "Drools DMN", "IBM ODM", "Flowable DMN"],
      "law_reference": "Työtapaturma- ja ammattitautilaki 459/2015"
    }
  }
}

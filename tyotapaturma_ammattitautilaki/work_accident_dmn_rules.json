{
  "model": {
    "name": "Finnish Work Accident Insurance DMN",
    "namespace": "https://tyotapaturma-fi/dmn/work-accident-insurance",
    "version": "1.0",
    "description": "DMN-compatible business rules for Työtapaturma- ja ammattitautilaki (459/2015)",
    "based_on": "Työtapaturma- ja ammattitautilaki (459/2015)",
    "source": "https://www.finlex.fi/fi/laki/alkup/2015/20150459",
    "decisions": [
      {
        "name": "InsuranceObligation",
        "description": "Determine if employer has mandatory insurance obligation",
        "hit_policy": "UNIQUE",
        "input_variables": ["person.type", "person.employment_status"],
        "output_variable": "insurance_required",
        "rules": [
          {"inputs": ["Employee", "employed"], "output": "MandatoryInsurance", "legal_basis": "Section 3"},
          {"inputs": ["Employee", "probation"], "output": "MandatoryInsurance", "legal_basis": "Section 3"},
          {"inputs": ["Entrepreneur", "YEL_insured"], "output": "VoluntaryWorkTimeInsurance", "legal_basis": "Sections 188-190"},
          {"inputs": ["Farmer", "any"], "output": "Excluded", "legal_basis": "Section 11"},
          {"inputs": ["ForeignWorker", "EU"], "output": "MandatoryInsurance", "legal_basis": "Section 8"},
          {"inputs": ["ForeignWorker", "non_EU"], "output": "Check bilateral", "legal_basis": "Section 8"}
        ]
      },
      {
        "name": "CompensableEvent",
        "description": "Determine if event is compensable under the law",
        "hit_policy": "FIRST",
        "input_variables": ["event.type", "event.location", "event.timing", "event.circumstances"],
        "output_variable": "compensable",
        "rules": [
          {"inputs": ["WorkplaceAccident", "workplace", "during_work"], "output": "Compensable", "legal_basis": "Section 17"},
          {"inputs": ["WorkplaceAccident", "workplace", "before_after"], "output": "Compensable if work-related", "legal_basis": "Section 18"},
          {"inputs": ["CommuteAccident", "home_work_route", "direct_route"], "output": "Compensable", "legal_basis": "Section 21"},
          {"inputs": ["CommuteAccident", "home_work_route", "detour"], "output": "Limited compensation", "legal_basis": "Section 21"},
          {"inputs": ["BusinessTripAccident", "work_travel", "during_travel"], "output": "Compensable", "legal_basis": "Section 22"},
          {"inputs": ["BusinessTripAccident", "free_time", "during_trip"], "output": "Limited", "legal_basis": "Section 24"},
          {"inputs": ["OccupationalDisease", "any", "diagnosed"], "output": "Compensable", "legal_basis": "Section 26"},
          {"inputs": ["RepetitiveStrainInjury", "any", "any"], "output": "Compensable", "legal_basis": "Section 33"},
          {"inputs": ["ViolenceIncident", "work_related", "during_work"], "output": "Compensable", "legal_basis": "Section 34"},
          {"inputs": ["PsychologicalInjury", "work_related", "serious"], "output": "Compensable", "legal_basis": "Section 35"}
        ]
      },
      {
        "name": "CompensationType",
        "description": "Determine type of compensation based on injury",
        "hit_policy": "FIRST",
        "input_variables": ["injury.type", "injury.severity", "injury.duration"],
        "output_variable": "compensation_type",
        "rules": [
          {"inputs": ["PhysicalInjury", "minor", "< 1 year"], "output": "MedicalExpenses", "legal_basis": "Section 36"},
          {"inputs": ["PhysicalInjury", "moderate", "1-3 years"], "output": "MedicalExpenses + LostWages", "legal_basis": "Sections 36, 55"},
          {"inputs": ["PhysicalInjury", "severe", "> 3 years"], "output": "MedicalExpenses + LostWages + Disability", "legal_basis": "Sections 36, 55, 83"},
          {"inputs": ["PhysicalInjury", "permanent", "any"], "output": "PermanentDisabilityCompensation", "legal_basis": "Section 83"},
          {"inputs": ["OccupationalDisease", "any", "any"], "output": "MedicalExpenses + LostWages", "legal_basis": "Sections 26-32"},
          {"inputs": ["MentalInjury", "moderate", "any"], "output": "Rehabilitation", "legal_basis": "Section 88"},
          {"inputs": ["Death", "any", "any"], "output": "DeathCompensation", "legal_basis": "Sections 99-109"}
        ]
      },
      {
        "name": "CompensationAmount",
        "description": "Calculate compensation amount",
        "hit_policy": "UNIQUE",
        "input_variables": ["compensation_type", "income.annual", "injury.severity", "work_ability.lost_percentage"],
        "output_variable": "compensation_amount",
        "rules": [
          {"inputs": ["LostWages", "any", "any", "100%"], "output": "income.annual / 365 * days", "legal_basis": "Section 56"},
          {"inputs": ["LostWages", "any", "any", "50%"], "output": "income.annual / 365 * days * 0.5", "legal_basis": "Section 56"},
          {"inputs": ["LostWages", "any", "any", "0%"], "output": "0", "legal_basis": "Section 56"},
          {"inputs": ["PermanentDisability", "any", "10-19%", "any"], "output": "income.annual * 0.1", "legal_basis": "Section 84"},
          {"inputs": ["PermanentDisability", "any", "20-50%", "any"], "output": "income.annual * 0.2", "legal_basis": "Section 84"},
          {"inputs": ["PermanentDisidence", "any", "100%", "any"], "output": "income.annual", "legal_basis": "Section 84"},
          {"inputs": ["Death", "any", "any", "any"], "output": "Section 99-109 rates", "legal_basis": "Sections 99-109"}
        ]
      },
      {
        "name": "MedicalCareCoverage",
        "description": "Determine medical care coverage",
        "hit_policy": "FIRST",
        "input_variables": ["treatment.type", "treatment.necessity", "treatment.provider"],
        "output_variable": "coverage",
        "rules": [
          {"inputs": ["EmergencyCare", "required", "public"], "output": "100%", "legal_basis": "Section 37"},
          {"inputs": ["EmergencyCare", "required", "private"], "output": "100% (reimbursement)", "legal_basis": "Section 37"},
          {"inputs": ["Surgery", "required", "any"], "output": "100%", "legal_basis": "Section 38"},
          {"inputs": ["Medicines", "prescribed", "pharmacy"], "output": "100% (drug list)", "legal_basis": "Section 45"},
          {"inputs": ["Rehabilitation", "medical_necessity", "any"], "output": "100%", "legal_basis": "Section 88"},
          {"inputs": ["DentalTreatment", "accident_related", "any"], "output": "100%", "legal_basis": "Section 48"},
          {"inputs": ["TravelToTreatment", "required", "any"], "output": "Kilometre allowance", "legal_basis": "Section 50"}
        ]
      },
      {
        "name": "ClaimTimeLimit",
        "description": "Determine claim submission time limit",
        "hit_policy": "UNIQUE",
        "input_variables": ["claim.type", "injury.timing"],
        "output_variable": "time_limit",
        "rules": [
          {"inputs": ["WorkAccident", "within_3_years"], "output": "3 years from accident", "legal_basis": "Section 110"},
          {"inputs": ["WorkAccident", "after_3_years"], "output": "Claim barred", "legal_basis": "Section 110"},
          {"inputs": ["OccupationalDisease", "any"], "output": "3 years from diagnosis", "legal_basis": "Section 110"},
          {"inputs": ["DeathBenefit", "within_3_years"], "output": "3 years from death", "legal_basis": "Section 110"},
          {"inputs": ["SurvivorBenefit", "any"], "output": "3 years from death", "legal_basis": "Section 110"}
        ]
      },
      {
        "name": "RehabilitationEligibility",
        "description": "Determine rehabilitation eligibility",
        "hit_policy": "FIRST",
        "input_variables": ["injury.severity", "work_ability.reduced", "rehabilitation.medical_recommendation"],
        "output_variable": "eligible",
        "rules": [
          {"inputs": ["severe", "yes", "yes"], "output": "Full rehabilitation", "legal_basis": "Section 88"},
          {"inputs": ["moderate", "yes", "yes"], "output": "Vocational rehabilitation", "legal_basis": "Section 89"},
          {"inputs": ["minor", "no", "no"], "output": "Medical rehabilitation only", "legal_basis": "Section 88"},
          {"inputs": ["any", "any", "no"], "output": "Not eligible", "legal_basis": "Section 88"}
        ]
      },
      {
        "name": "InsurancePremium",
        "description": "Calculate insurance premium",
        "hit_policy": "UNIQUE",
        "input_variables": ["employer.industry_risk", "employer.payroll", "employer.claims_history"],
        "output_variable": "premium",
        "rules": [
          {"inputs": ["low_risk", "any", "no_claims"], "output": "payroll * 0.005", "legal_basis": "Section 166"},
          {"inputs": ["medium_risk", "any", "no_claims"], "output": "payroll * 0.01", "legal_basis": "Section 166"},
          {"inputs": ["high_risk", "any", "no_claims"], "output": "payroll * 0.02", "legal_basis": "Section 166"},
          {"inputs": ["any", "any", "with_claims"], "output": "base_premium + risk loading", "legal_basis": "Sections 171-176"}
        ]
      },
      {
        "name": "AppealsProcess",
        "description": "Determine appeals process",
        "hit_policy": "UNIQUE",
        "input_variables": ["decision.type", "claimaint.disagreement"],
        "output_variable": "appeal_path",
        "rules": [
          {"inputs": ["Rejection", "yes"], "output": "Appeal to Insurance Company -> Accident Board", "legal_basis": "Section 237"},
          {"inputs": ["AmountDispute", "yes"], "output": "Appeal to Accident Compensation Board", "legal_basis": "Section 237"},
          {"inputs": ["LateDecision", "yes"], "output": "Complaint + Late interest", "legal_basis": "Sections 146-155"},
          {"inputs": ["AnyDecision", "no"], "output": "No appeal", "legal_basis": "N/A"}
        ]
      },
      {
        "name": "SurvivorBenefits",
        "description": "Determine survivor benefit eligibility",
        "hit_policy": "FIRST",
        "input_variables": ["survivor.relationship", "survivor.age", "deceased.contributory"],
        "output_variable": "benefit",
        "rules": [
          {"inputs": ["Spouse", "any", "yes"], "output": "Spouse pension", "legal_basis": "Section 100"},
          {"inputs": ["Spouse", "any", "no"], "output": "Lump sum", "legal_basis": "Section 107"},
          {"inputs": ["Child", "under_18", "yes"], "output": "Child pension + orphan allowance", "legal_basis": "Sections 101-103"},
          {"inputs": ["Child", "18-24_student", "yes"], "output": "Student orphan pension", "legal_basis": "Section 103"},
          {"inputs": ["Dependent", "any", "yes"], "output": "Dependent allowance", "legal_basis": "Section 105"}
        ]
      }
    ],
    "metadata": {
      "created": "2026-02-24",
      "dmn_version": "1.3",
      "compatible_engines": ["Camunda DMN", "Drools DMN", "IBM ODM", "Flowable DMN"]
    }
  }
}

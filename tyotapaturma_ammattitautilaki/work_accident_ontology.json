{
  "ontology": {
    "name": "Finnish Work Accident and Occupational Disease Insurance Ontology",
    "version": "1.0",
    "based_on": "Työtapaturma- ja ammattitautilaki (459/2015) - Occupational Accident and Occupational Diseases Act",
    "language": "en",
    "effective_date": "2016-01-01",
    "source": "https://www.finlex.fi/fi/laki/alkup/2015/20150459",
    "entities": {
      "Person": {
        "description": "Natural person involved in work accident insurance",
        "attributes": ["personalId", "firstName", "lastName", "address"],
        "subclasses": {
          "Employee": {
            "description": "Person working in employment relationship under employment contract, public service, or similar",
            "legal_basis": "Section 8"
          },
          "Entrepreneur": {
            "description": "Self-employed person with YEL insurance",
            "legal_basis": "Sections 188-190"
          },
          "Farmer": {
            "description": "Agricultural entrepreneur under separate farmer accident insurance",
            "legal_basis": "Section 11",
            "note": "Excluded from this law"
          },
          "InjuredParty": {
            "description": "Person who suffered a work accident or occupational disease",
            "attributes": ["injuryDate", "injuryType", "severity", "medicalFindings"]
          },
          "Survivor": {
            "description": "Family member entitled to benefits after death of injured party",
            "subclasses": ["Widow", "Child", "Dependent"]
          },
          "Employer": {
            "description": "Entity with mandatory insurance obligation",
            "attributes": ["businessId", "companyName", "annualPayroll"]
          },
          "EUWorker": {
            "description": "Worker covered by EU social security regulations",
            "legal_basis": "Section 2(7)",
            "note": "Covered by EU Regulation 883/2004"
          },
          "ThirdCountryWorker": {
            "description": "Worker from non-EU country (third country)",
            "legal_basis": "Section 2(8)",
            "note": "Subject to bilateral agreements"
          }
        }
      },
      "Pension": {
        "description": "Pension definitions per Section 2",
        "subclasses": {
          "OldAgePension": {
            "description": "Old-age pension under TyEL (395/2006), Kela pension (568/2007), or foreign equivalent",
            "legal_basis": "Section 2(9)"
          },
          "DisabilityPension": {
            "description": "Full disability pension under TyEL or sickness pension under Kela",
            "legal_basis": "Section 2(10)"
          }
        }
      },
      "Insurance": {
        "description": "Insurance contract for work accidents and occupational diseases",
        "attributes": ["policyNumber", "insuranceCompany", "policyHolder", "startDate", "premium", "coverage"],
        "subclasses": {
          "MandatoryInsurance": {
            "description": "Compulsory insurance that employers must obtain for employees",
            "legal_basis": "Section 3",
            "attributes": ["coverageType", "minimumCoverage"]
          },
          "VoluntaryWorkTimeInsurance": {
            "description": "Voluntary insurance for entrepreneurs covering work hours",
            "legal_basis": "Sections 188-198",
            "eligibility": "Entrepreneur with YEL insurance"
          },
          "VoluntaryFreeTimeInsurance": {
            "description": "Voluntary insurance for leisure time accidents",
            "legal_basis": "Sections 199-203"
          }
        }
      },
      "InsurableEvent": {
        "description": "Event that triggers insurance coverage",
        "attributes": ["eventDate", "eventType", "location", "circumstances"],
        "subclasses": {
          "OccupationalAccident": {
            "description": "Accident occurring during work, at workplace, or on work commute",
            "legal_basis": "Sections 17-25",
            "subclasses": {
              "WorkplaceAccident": "Accident at workplace during work",
              "CommuteAccident": "Accident on home-work journey",
              "BusinessTripAccident": "Accident during work-related travel",
              "WorkRelatedActivityAccident": "Accident during employer-organized activity",
              "SportsAccident": {
                "description": "Accident during work-sponsored sports or fitness activities",
                "legal_basis": "Section 24(1)",
                "condition": "At employer's premises or organized by employer"
              },
              "TrainingAccident": {
                "description": "Accident during work-related training",
                "legal_basis": "Section 24(2)"
              },
              "BusinessTripFreeTime": {
                "description": "Accident during free time on business trip",
                "legal_basis": "Section 24(3)",
                "note": "Limited compensation - only medical expenses"
              },
              "FrictionInjury": {
                "description": "Abrasion injuries from friction",
                "legal_basis": "Section 18(1)"
              },
              "CorrosionInjury": {
                "description": "Injury from contact with corrosive substances",
                "legal_basis": "Section 18(2)"
              },
              "InhalationInjury": {
                "description": "Injury from gas, steam, or mist inhalation",
                "legal_basis": "Section 18(3)"
              },
              "TemperatureInjury": {
                "description": "Cold injuries, hypothermia, burns, heat illness",
                "legal_basis": "Section 18(4)",
                "subclasses": ["ColdInjury", "Burn", "HeatIllness"]
              },
              "RadiationInjury": {
                "description": "Injury from radiation exposure",
                "legal_basis": "Section 18(5)"
              },
              "PressureInjury": {
                "description": "Injury from pressure variation",
                "legal_basis": "Section 18(6)"
              }
            }
          },
          "OccupationalDisease": {
            "description": "Disease caused by occupational exposure to physical, chemical, or biological factors",
            "legal_basis": "Sections 26-32",
            "attributes": ["diseaseCode", "exposureDuration", "latencyPeriod"],
            "subclasses": {
              "ListedDisease": {
                "description": "Disease listed in government decree",
                "legal_basis": "Section 28",
                "note": "Specific diseases with established occupational connection"
              },
              " Tendonitis": {
                "description": "Tendon inflammation from repetitive work",
                "legal_basis": "Section 28(1)"
              },
              "CarpalTunnelSyndrome": {
                "description": "Median nerve compression from repetitive work",
                "legal_basis": "Section 28(1)"
              },
              "Tendinosis": {
                "description": "Chronic tendon condition from repetitive strain",
                "legal_basis": "Section 28(1)"
              },
              "NoiseInducedHearingLoss": {
                "description": "Hearing loss from occupational noise exposure",
                "legal_basis": "Section 28(1)"
              },
              "DustDisease": {
                "description": "Lung disease from dust exposure (pneumoconiosis)",
                "legal_basis": "Section 28(2)",
                "note": "Including asbestosis, silicosis"
              },
              "ChemicalPoisoning": {
                "description": "Acute or chronic poisoning from chemical exposure",
                "legal_basis": "Section 28(3)"
              },
              "SkinDisease": {
                "description": "Occupational skin disease (dermatitis)",
                "legal_basis": "Section 28(4)"
              },
              "UnlistedDisease": {
                "description": "Disease not in official list but with occupational causation",
                "legal_basis": "Section 29",
                "condition": "Must prove occupational causation"
              }
            }
          },
          "RepetitiveStrainInjury": {
            "description": "Muscle or tendon strain from single work movement",
            "legal_basis": "Section 33",
            "note": "Maximum 6 weeks compensation"
          },
          "ViolenceDamage": {
            "description": "Injury from assault or intentional act by another person",
            "legal_basis": "Section 34",
            "condition": "Must be related to work duties"
          },
          "PsychologicalShock": {
            "description": "Mental reaction resulting from occupational accident",
            "legal_basis": "Section 35",
            "subclasses": ["AcuteStressReaction", "PTSD", "PersonalityChange"]
          }
        }
      },
      "Compensation": {
        "description": "Benefit or payment provided due to insured event",
        "attributes": ["amount", "startDate", "duration", "paymentFrequency"],
        "subclasses": {
          "MedicalCareCompensation": {
            "description": "Reimbursement for medical treatment costs",
            "legal_basis": "Sections 36-49",
            "subclasses": {
              "PublicHealthcareCompensation": "Coverage for public healthcare costs",
              "PrivateHealthcareCompensation": "Coverage for private healthcare costs",
              "ForeignHealthcareCompensation": "Coverage for medical care abroad",
              "MedicineCompensation": "Reimbursement for prescribed medicines",
              "InvestigationCost": {
                "description": "Costs for medical examinations to determine injury cause",
                "legal_basis": "Section 38"
              },
              "CareSupport": {
                "description": "Daily allowance for care needs",
                "legal_basis": "Section 51",
                "amounts": {
                  "basic": "€8.70/day",
                  "enhanced": "€19.55/day",
                  "highest": "€23.41/day"
                }
              },
              "ClothingAllowance": {
                "description": "Allowance for damaged clothing/appliances",
                "legal_basis": "Section 52",
                "amounts": {
                  "soft_materials": "€0.58/day",
                  "prosthetics": "€2.31/day"
                }
              },
              "PersonalItemsCompensation": {
                "description": "Compensation for damaged personal items",
                "legal_basis": "Section 54",
                "items": ["Glasses", "HearingAids", "DentalProsthetics", "SupportBandages", "ArtificialLimbs", "Clothing"]
              }
            }
          },
          "DailyAllowance": {
            "description": "Compensation for loss of earnings during incapacity",
            "legal_basis": "Sections 56-62",
            "attributes": ["calculationBase", "minimumAmount", "maximumDuration"]
          },
          "DisabilityPension": {
            "description": "Pension paid when work capacity is permanently reduced",
            "legal_basis": "Sections 63-68",
            "attributes": ["reductionPercentage", "calculationBase", "oneTimeIncrease"],
            "subclasses": {
              "FullDisabilityPension": "100% reduction in work capacity",
              "PartialDisabilityPension": "10-100% reduction in work capacity"
            }
          },
          "RehabilitationAllowance": {
            "description": "Compensation during vocational rehabilitation",
            "legal_basis": "Sections 69, 88-98"
          },
          "PermanentDamageCompensation": {
            "description": "One-time or continuous payment for permanent disability",
            "legal_basis": "Sections 83-87",
            "attributes": ["damageClass", "oneTimePayment", "continuousPayment"]
          },
          "RehabilitationCompensation": {
            "description": "Coverage for rehabilitation costs",
            "legal_basis": "Sections 88-98",
            "subclasses": {
              "VocationalRehabilitation": "Job-related rehabilitation",
              "MedicalRehabilitation": "Medical rehabilitation services",
              "RehabilitationEquipment": "Assistive devices and modifications"
            }
          },
          "DeathCompensation": {
            "description": "Benefits paid upon death of injured party",
            "legal_basis": "Sections 99-109",
            "subclasses": {
              "SurvivorsPension": "Pension for widow/children",
              "FuneralExpenses": "Coverage for burial costs"
            }
          },
          "CostCompensation": {
            "description": "Reimbursement for related expenses",
            "subclasses": {
              "TravelExpenses": "Transportation to/from treatment",
              "AccommodationExpenses": "Lodging during treatment",
              "CareSupport": "Additional care costs",
              "ClothingAllowance": "Compensation for damaged clothing"
            }
          }
        }
      },
      "Income": {
        "description": "Earnings calculations for compensation",
        "subclasses": {
          "AnnualWorkIncome": {
            "description": "Yearly earnings used as basis for compensation",
            "legal_basis": "Sections 71-80",
            "attributes": ["baseAmount", "calculationMethod"]
          },
          "MinimumAnnualIncome": {
            "description": "Minimum guaranteed annual income",
            "legal_basis": "Section 79",
            "current_amount": "13,680 EUR (2014 base year)"
          }
        }
      },
      "Procedure": {
        "description": "Administrative process for claims and appeals",
        "subclasses": {
          "ClaimFiling": {
            "description": "Process of filing compensation claim",
            "legal_basis": "Sections 110-116"
          },
          "Investigation": {
            "description": "Insurance company investigation of claim",
            "legal_basis": "Sections 119-127"
          },
          "MedicalAssessment": {
            "description": "Medical evaluation of injury/disease",
            "legal_basis": "Section 121"
          },
          "Payment": {
            "description": "Compensation payment process",
            "legal_basis": "Sections 135-145"
          },
          "Appeal": {
            "description": "Process to challenge decision",
            "legal_basis": "Sections 237-243"
          },
          "BaseAppeal": {
            "description": "Appeal based on incorrect law application or factual findings",
            "legal_basis": "Section 240"
          },
          "SelfCorrection": {
            "description": "Insurance company can correct own decision before formal appeal",
            "legal_basis": "Section 242"
          },
          "DecisionRemoval": {
            "description": "Administrative removal of clearly unlawful decision",
            "legal_basis": "Section 246"
          },
          "RecoveryProcedure": {
            "description": "Recovery of incorrectly paid compensation",
            "legal_basis": "Section 247"
          },
          "Recovery": {
            "description": "Recovery of overpaid compensation",
            "legal_basis": "Section 247"
          }
        }
      },
      "Institution": {
        "description": "Organizations involved in insurance system",
        "subclasses": {
          "InsuranceCompany": {
            "description": "Private company authorized to provide insurance",
            "legal_basis": "Section 205"
          },
          "StateTreasury": {
            "description": "State organization paying compensation for state employees",
            "legal_basis": "Section 207"
          },
          "AccidentInsuranceCentre": {
            "description": "Central organization coordinating the system (Tapaturmavakuutuskeskus)",
            "legal_basis": "Sections 209-225"
          },
          "ClaimAppealBoard": {
            "description": "Board for dispute resolution",
            "legal_basis": "Sections 226-228"
          },
          "MedicalExpert": {
            "description": "Authorized medical expert for injury assessment",
            "legal_basis": "Section 121",
            "role": "Provides medical opinions for claims"
          },
          "EmployerInsuranceRegister": {
            "description": "Register of employer insurance obligations",
            "legal_basis": "Section 231"
          }
        }
      }
    },
    "relationships": [
      {
        "subject": "Employee",
        "predicate": "has_right_to",
        "object": "Compensation",
        "condition": "When suffering occupational accident or disease"
      },
      {
        "subject": "Employer",
        "predicate": "must_obtain",
        "object": "MandatoryInsurance",
        "condition": "For all employees"
      },
      {
        "subject": "InsuranceCompany",
        "predicate": "must_pay",
        "object": "Compensation",
        "condition": "When insured event occurs"
      },
      {
        "subject": "OccupationalAccident",
        "predicate": "triggers",
        "object": "Compensation"
      },
      {
        "subject": "OccupationalDisease",
        "predicate": "triggers",
        "object": "Compensation"
      },
      {
        "subject": "InjuredParty",
        "predicate": "must_file_claim_within",
        "object": "3 years",
        "note": "From date of accident or disease discovery"
      },
      {
        "subject": "DailyAllowance",
        "predicate": "maximum_duration",
        "object": "1 year",
        "note": "From date of accident"
      },
      {
        "subject": "DisabilityPension",
        "predicate": "requires",
        "object": "minimum_10_percent_work_capacity_reduction"
      },
      {
        "subject": "Survivor",
        "predicate": "has_right_to",
        "object": "DeathCompensation",
        "condition": "When injured party dies from insured event"
      }
    ],
    "key_dates": {
      "effective_date": "2016-01-01",
      "replaced_laws": [
        "Tapaturmavakuutuslaki (608/1948)",
        "Ammattitautilaki (1343/1988)",
        "Tapaturmavakuutuslain mukainen kuntoutuslaki (625/1991)",
        "Valtion virkamiesten tapaturmakorvaukset (449/1990)"
      ]
    },
    "coverage": {
      "geographical": "Finland primarily, extended to EU/agreement countries",
      "personal_scope": "Employees, entrepreneurs (voluntary), certain other groups"
    }
  }
}
